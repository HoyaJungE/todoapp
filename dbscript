
  CREATE TABLE "GOODS" 
   (	"GOODS_NO" NUMBER NOT NULL ENABLE, 
	"GOODS_CATEGORY" VARCHAR2(100 BYTE) NOT NULL ENABLE, 
	"GOODS_NAME" VARCHAR2(100 BYTE) NOT NULL ENABLE, 
	"GOODS_CONTENT" VARCHAR2(4000 BYTE) NOT NULL ENABLE, 
	"GOODS_ORIGIN_PRICE" NUMBER, 
	"GOODS_SELL_PRICE" NUMBER, 
	"GOODS_SALE_PRICE" NUMBER, 
	"GOODS_DATE" DATE NOT NULL ENABLE, 
	"GOODS_KEYWORD" VARCHAR2(100 BYTE), 
	"GOODS_READCNT" NUMBER DEFAULT 0, 
	"GOODS_PICK" VARCHAR2(100 BYTE) DEFAULT 0, 
	"GOODS_THUMBNAIL" VARCHAR2(1000 BYTE), 
	"GUBUN" CHAR(1 BYTE) DEFAULT 0, 
	"FILE_NO" NUMBER, 
	"WRTER_NO" NUMBER, 
	 CONSTRAINT "GOODS_PK" PRIMARY KEY ("GOODS_NO")
   ) ;

   COMMENT ON COLUMN "GOODS"."GOODS_NO" IS '상품번호';
   COMMENT ON COLUMN "GOODS"."GOODS_CATEGORY" IS '상품카테고리';
   COMMENT ON COLUMN "GOODS"."GOODS_NAME" IS '상품명';
   COMMENT ON COLUMN "GOODS"."GOODS_CONTENT" IS '내용';
   COMMENT ON COLUMN "GOODS"."GOODS_ORIGIN_PRICE" IS '상품원가';
   COMMENT ON COLUMN "GOODS"."GOODS_SELL_PRICE" IS '상품판매가';
   COMMENT ON COLUMN "GOODS"."GOODS_SALE_PRICE" IS '상품세일가';
   COMMENT ON COLUMN "GOODS"."GOODS_DATE" IS '등록일시';
   COMMENT ON COLUMN "GOODS"."GOODS_KEYWORD" IS '키워드';
   COMMENT ON COLUMN "GOODS"."GOODS_READCNT" IS '조회수';
   COMMENT ON COLUMN "GOODS"."GOODS_PICK" IS '좋아요수';
   COMMENT ON COLUMN "GOODS"."GOODS_THUMBNAIL" IS '썸네일이미지';
   COMMENT ON COLUMN "GOODS"."GUBUN" IS '구분';
   COMMENT ON COLUMN "GOODS"."FILE_NO" IS '파일번호';
   COMMENT ON COLUMN "GOODS"."WRTER_NO" IS '작성자';

CREATE TABLE "MEMBER" 
   (	"MEMBER_NO" NUMBER NOT NULL ENABLE, 
	"MEMBER_ID" VARCHAR2(20 BYTE) NOT NULL ENABLE, 
	"MEMBER_PASSWD" VARCHAR2(20 BYTE) NOT NULL ENABLE, 
	"MEMBER_NAME" VARCHAR2(20 BYTE) NOT NULL ENABLE, 
	"MEMBER_BIRTH" DATE NOT NULL ENABLE, 
	"MEMBER_EMAIL" VARCHAR2(30 BYTE) NOT NULL ENABLE, 
	"MEMBER_PHONE" VARCHAR2(13 BYTE) NOT NULL ENABLE, 
	"MEMBER_ZIPCODE" VARCHAR2(10 BYTE) NOT NULL ENABLE, 
	"MEMBER_ADDR1" VARCHAR2(100 BYTE) NOT NULL ENABLE, 
	"MEMBER_ADDR2" VARCHAR2(100 BYTE) NOT NULL ENABLE, 
	"MEMBER_DATE" DATE NOT NULL ENABLE, 
	"MEMBER_GRADE" VARCHAR2(20 BYTE) NOT NULL ENABLE, 
	"MEMBER_TOTAL" FLOAT(126), 
	"MEMBER_LOG" DATE NOT NULL ENABLE, 
	"MEMBER_DELETE" CHAR(1 BYTE) DEFAULT '0', 
	"SMS_AGREE" VARCHAR2(20 BYTE), 
	"EMAIL_AGREE" VARCHAR2(20 BYTE), 
	 PRIMARY KEY ("MEMBER_NO")
   );

   COMMENT ON COLUMN "MEMBER"."MEMBER_NO" IS '회원번호';
   COMMENT ON COLUMN "MEMBER"."MEMBER_ID" IS '회원ID';
   COMMENT ON COLUMN "MEMBER"."MEMBER_PASSWD" IS '회원비밀번호';
   COMMENT ON COLUMN "MEMBER"."MEMBER_NAME" IS '회원성명';
   COMMENT ON COLUMN "MEMBER"."MEMBER_BIRTH" IS '회원생일';
   COMMENT ON COLUMN "MEMBER"."MEMBER_EMAIL" IS '회원이메일';
   COMMENT ON COLUMN "MEMBER"."MEMBER_PHONE" IS '회원휴대전화번호';
   COMMENT ON COLUMN "MEMBER"."MEMBER_ZIPCODE" IS '회원우편번호';
   COMMENT ON COLUMN "MEMBER"."MEMBER_ADDR1" IS '회원주소1';
   COMMENT ON COLUMN "MEMBER"."MEMBER_ADDR2" IS '회원주소2';
   COMMENT ON COLUMN "MEMBER"."MEMBER_DATE" IS '회원생일';
   COMMENT ON COLUMN "MEMBER"."MEMBER_GRADE" IS '회원등급';
   COMMENT ON COLUMN "MEMBER"."MEMBER_TOTAL" IS '회원전체점수';
   COMMENT ON COLUMN "MEMBER"."MEMBER_LOG" IS '회원로그';
   COMMENT ON COLUMN "MEMBER"."MEMBER_DELETE" IS '회원탈퇴여부';
   COMMENT ON COLUMN "MEMBER"."SMS_AGREE" IS 'SMS수신동의여부';
   COMMENT ON COLUMN "MEMBER"."EMAIL_AGREE" IS '이메일수신동의여부';


  CREATE TABLE "MEMBER_ROLE" 
   (	"ROLE_NO" NUMBER NOT NULL ENABLE, 
	"MEMBER_NO" NUMBER NOT NULL ENABLE, 
	"INSRT_DT" DATE, 
	 CONSTRAINT "USER_ROLE_PK" PRIMARY KEY ("ROLE_NO", "MEMBER_NO")
   );

  CREATE TABLE "MENU" 
   (	"MENU_NO" NUMBER NOT NULL ENABLE, 
	"UPPR_MENU_NO" NUMBER, 
	"MENU_URL" VARCHAR2(200 BYTE), 
	"MENU_NAME" VARCHAR2(200 BYTE), 
	"CREATE_DT" DATE, 
	"ORDR" NUMBER, 
	"MENU_TYPE" VARCHAR2(20 BYTE), 
	 CONSTRAINT "MENU_PK" PRIMARY KEY ("MENU_NO")
   );

   COMMENT ON COLUMN "MENU"."MENU_NO" IS '메뉴번호';
   COMMENT ON COLUMN "MENU"."UPPR_MENU_NO" IS '상위메뉴번호';
   COMMENT ON COLUMN "MENU"."MENU_URL" IS '메뉴URL';
   COMMENT ON COLUMN "MENU"."MENU_NAME" IS '메뉴이름';
   COMMENT ON COLUMN "MENU"."CREATE_DT" IS '생성일자';
   COMMENT ON COLUMN "MENU"."ORDR" IS '메뉴순서';
   COMMENT ON COLUMN "MENU"."MENU_TYPE" IS '메뉴타입';

  CREATE TABLE "FILE_MASTER" 
   (	"FILE_NO" NUMBER NOT NULL ENABLE, 
	"FILE_DC" VARCHAR2(255 BYTE), 
	"USE_AT" CHAR(1 BYTE), 
	 CONSTRAINT "FILE_MASTER_PK" PRIMARY KEY ("FILE_NO")
   ) ;

   COMMENT ON COLUMN "FILE_MASTER"."FILE_NO" IS '첨부파일번호';
   COMMENT ON COLUMN "FILE_MASTER"."FILE_DC" IS '첨부파일설명';
   COMMENT ON COLUMN "FILE_MASTER"."USE_AT" IS '사용여부';

  CREATE TABLE "FILE_DTL"
   (	"FILE_NO" NUMBER NOT NULL ENABLE,
   "FILE_SN" NUMBER DEFAULT NULL NOT NULL ENABLE,
	"FILE_PHYSC_NM" VARCHAR2(400 BYTE),
	"FILE_PATH" VARCHAR2(255 BYTE),
	"FILE_LOGIC_NM" VARCHAR2(255 BYTE),
	"FILE_EXTSN_NM" VARCHAR2(100 BYTE),
	"FILE_BYTE_SIZE" VARCHAR2(10 BYTE),
	"FILE_ORD" NUMBER,
	 CONSTRAINT "SYS_C008447" PRIMARY KEY ("FILE_NO", "FILE_SN")
   )  ;

   COMMENT ON COLUMN "FILE_DTL"."FILE_NO" IS '첨부파일번호';
   COMMENT ON COLUMN "FILE_DTL"."FILE_PHYSC_NM" IS '첨부파일물리명';
   COMMENT ON COLUMN "FILE_DTL"."FILE_PATH" IS '첨부파일경로';
   COMMENT ON COLUMN "FILE_DTL"."FILE_LOGIC_NM" IS '첨부파일논리명';
   COMMENT ON COLUMN "FILE_DTL"."FILE_EXTSN_NM" IS '첨부파일확장자명';
   COMMENT ON COLUMN "FILE_DTL"."FILE_BYTE_SIZE" IS '첨부파일바이트사이즈';
   COMMENT ON COLUMN "FILE_DTL"."FILE_ORD" IS '첨부파일정렬순서';
   COMMENT ON COLUMN "FILE_DTL"."FILE_SN" IS '첨부파일순서';

  CREATE TABLE "ROLE" 
   (	"ROLE_NO" NUMBER NOT NULL ENABLE, 
	"UPPR_ROLE_NO" NUMBER, 
	"ROLE_NM" VARCHAR2(200 BYTE), 
	"ROLE_CN" VARCHAR2(1000 BYTE), 
	 CONSTRAINT "ROLE_PK" PRIMARY KEY ("ROLE_NO")
   ) ;

   COMMENT ON COLUMN "ROLE"."ROLE_NO" IS '롤아이디';
   COMMENT ON COLUMN "ROLE"."UPPR_ROLE_NO" IS '상위롤아이디';
   COMMENT ON COLUMN "ROLE"."ROLE_NM" IS '롤이름';
   COMMENT ON COLUMN "ROLE"."ROLE_CN" IS '설명';

  CREATE TABLE "ROLE_MENU" 
   (	"ROLE_NO" NUMBER, 
	"MENU_NO" NUMBER, 
	"INSRT_DT" DATE
   ) ;

   COMMENT ON COLUMN "ROLE_MENU"."ROLE_NO" IS '롤번호';
   COMMENT ON COLUMN "ROLE_MENU"."MENU_NO" IS '메뉴번호';
   COMMENT ON COLUMN "ROLE_MENU"."INSRT_DT" IS '등록일자';


-- 시퀀스
DROP SEQUENCE MENU_NO_SEQ;

CREATE SEQUENCE MENU_NO_SEQ
START WITH 1 -- 시작 번호
INCREMENT BY 1 -- 증가 값
NOCACHE -- 캐시를 사용하지 않음
NOCYCLE; -- 순환하지 않음

DROP SEQUENCE FILE_NO_SEQ;

CREATE SEQUENCE FILE_NO_SEQ
    START WITH 1
    INCREMENT BY 1
    NOCACHE
    NOCYCLE;

DROP SEQUENCE ROLE_NO_SEQ;

CREATE SEQUENCE ROLE_NO_SEQ
    START WITH 1
    INCREMENT BY 1
    NOCACHE
    NOCYCLE;

CREATE TABLE "ROLE_MENU"
   (	"ROLE_NO" NUMBER,
	"MENU_NO" NUMBER,
	"INSRT_DT" DATE
   ) ;

